serviceTCP:
  type: LoadBalancer
  externalTrafficPolicy: Local
  loadBalancerIP: {{ .Values.localdnsIP }}
  annotations:
    metallb.universe.tf/allow-shared-ip: {{ .Values.localdnsIP }}

serviceUDP:
  type: LoadBalancer
  externalTrafficPolicy: Local
  loadBalancerIP: {{ .Values.localdnsIP }}
  annotations:
    metallb.universe.tf/allow-shared-ip: {{ .Values.localdnsIP }}

virtualHost: {{ .Values.pihole.hostname }}

ingress:
  enabled: true
  hosts:
  - {{ .Values.pihole.hostname }}
  annotations:
    kubernetes.io/ingress.class: {{ .Values.ingress.personalService }}

adminPassword: {{ .Values.PIHOLE_ADMIN_PASSWORD }}

dnsmasq:
  customDnsEntries:
  - address=/{{ .Values.bitwarden.hostname }}/{{ .Values.personalServiceIP }}
  - address=/{{ .Values.wireguard.hostname }}/{{ .Values.personalServiceIP }}
  - address=/{{ .Values.jellyfin.hostname }}/{{ .Values.personalServiceIP }}
  - address=/{{ .Values.nextcloud.hostname }}/{{ .Values.personalServiceIP }}
  - address=/{{ .Values.pihole.hostname }}/{{ .Values.personalServiceIP }}
  - address=/{{ .Values.rootDomain }}/{{ .Values.publicIP }}

DNS1: 1.1.1.1
DNS2: 8.8.8.8

