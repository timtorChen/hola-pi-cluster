image:
  repository: timtor/openvpn-jf
  tag: 0.0.1
service:
  type: LoadBalancer
  loadBalancerIP: {{ .Values.forwardedIP }}
  annotations:
    metallb.universe.tf/allow-shared-ip: {{ .Values.forwardedIP }}
  externalPort: 1194
persistence:
  enabled: true
  storageClass: {{ .Values.nfsclient.storageClassName }}
  size: {{ .Values.openvpn.storage }}
resources:
{{ toYaml .Values.openvpn.resources | indent 2 }}
